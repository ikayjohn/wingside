# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# PAYSTACK (Primary Payment Gateway)
# ==========================================
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxx

# ==========================================
# NOMBA (Alternative Payment Gateway)
# ==========================================
# Get these from: https://dashboard.nomba.com → Settings → API Keys
NOMBA_CLIENT_ID=your_nomba_client_id_here
NOMBA_CLIENT_SECRET=your_nomba_client_secret_here
NOMBA_ACCOUNT_ID=your_nomba_account_id_here

# Optional: Webhook signature verification (recommended for production)
NOMBA_WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# EMBEDLY (Loyalty & Wallet)
# ==========================================
EMBEDLY_API_KEY=your_embedly_api_key
EMBEDLY_MERCHANT_ID=your_merchant_id

# ==========================================
# ZOHO CRM INTEGRATION
# ==========================================
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ORGANIZATION_ID=your_zoho_org_id

# ==========================================
# NEXT.JS CONFIG
# ==========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==========================================
# NODE ENVIRONMENT
# ==========================================
NODE_ENV=development
